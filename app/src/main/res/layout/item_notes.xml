<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_dashed_border"
    android:padding="0.1dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.1dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#202124">
        <View
            android:id="@+id/notesPriority"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/red_shape"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/notesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="MVVM"
            android:textColor="#D1CCCC"
            android:textSize="16sp"
            android:fontFamily="@font/btwo"
             />

        <TextView
            android:id="@+id/notesSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/medium"
            android:text="jksfhshogsuhhgouhhguguug9u9ug9 uhgoohvivohgoioijgdjgg0eu09gijgiogeig0egiehggggohoidhggid00idlhpjpoig-o0g=0ee-=y0e"
            android:textColor="#D8D8D8"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/notesDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="17 April 2022"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/medium"
            android:maxLines="1"
            android:textColor="@color/white"/>



    </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>